pipeline {
  //agent { dockerfile true }
  agent any
  environment {
      BRANCH = "${ref ? ref.split('/')[2] : ""}"
      REPO = "${repo ? repo : ""}"
      COMMITAUTHOR = "${commitAuthor ? commitAuthor : "}"
      COMMITMESSAGE = "${commit_Message ? commit_Message : "}"
      COMMITTIME = "${commitTime ? commitTime : "}"
  }
  stages {
    stage('Build') {
      steps {
        script {
          currentBuild.displayName = "Build Repo : ${REPO} ${env.BUILD_ID}"
          currentBuild.description = "Commit Branch: ${BRANCH} \n Commit By: ${COMMITAUTHOR} \n Commit Message: ${COMMITMESSAGE} \n Commit Time: ${COMMITTIME}"
        }
      }
    }
    stage('branch main') {
      when { 
        anyOf {
          expression {BRANCH == 'main'}
        }
      }
      steps {
          script {
            echo "Received webhook payload: ${repo}"
            echo "Received webhook ref: ${BRANCH}"
          }
      }
    }
    stage('branch hook') {
      when {
        anyOf {
          expression {BRANCH == 'test-hook'}
        }
      }
      steps {
          script {
            echo "Received webhook payload: ${repo}"
            echo "Received webhook ref: ${BRANCH}"
          }
      }
    }
  }
}
