pipeline {
  //agent { dockerfile true }
  agent any
  environment {
      BRANCH = "${ref ? ref.split('/')[2] : ""}"
      REPO = "${repo ? repo : ""}"
  }
  stages {
    stage('Build') {
      steps {
        script {
          currentBuild.displayName = "Build Repo : ${ref} ${env.BUILD_ID}"
          currentBuild.description = "Commit Branch: ${BRANCH} \n Commit By: ${commitAuthor} \n Commit Message: ${commit_Message} \n Commit Time: ${commitTime}"
        }
      }
    }
    stage('branch main') {
      when { 
        anyOf {
          expression {BRANCH == 'main'}
        }
      }
      steps {
          script {
            echo "Received webhook payload: ${repo}"
            echo "Received webhook ref: ${BRANCH}"
          }
      }
    }
    stage('branch hook') {
      when {
        anyOf {
          expression {BRANCH == 'test-hook'}
        }
      }
      steps {
          script {
            echo "Received webhook payload: ${repo}"
            echo "Received webhook ref: ${BRANCH}"
          }
      }
    }
  }
}
