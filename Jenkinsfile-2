pipeline {
  //agent { dockerfile true }
  agent any
  environment {
      BRANCH = ""
      TEST = ref
    }
  stages {
    stage('check') {
       steps {
          script {
            def branch = ref.split('/')
            BRANCH = "${branch[2]}"
            echo "Received webhook ref: ${branch[2]}"
            echo "env.BRANCH : ${BRANCH}"
            echo "REF : ${TEST}"
          }
      }
    }
    stage('branch main') {
      when {
        anyOf {
          expression {BRANCH == 'main'}
        }
      }
      steps {
        //dir('var') {
          script {
            //def branchRef = "${ref}"
            def branch = ref.split('/')
            echo "Received webhook payload: ${repo}"
            echo "Received webhook ref: ${branch[2]}"
            echo "Event : branch main"
   
            //sh '''
                //ls -l
                //git status
                //git branch
            //'''
            //sh "printenv | sort"
          }
        //}
      }
    }
    stage('branch hook') {
      when {
        anyOf {
          expression {BRANCH == 'test-hook'}
        }
      }
      steps {
          script {
            
            echo "Event : branch test-hook"
            echo "Received webhook ref: ${BRANCH}"
          }
      }
    }
  }
}
